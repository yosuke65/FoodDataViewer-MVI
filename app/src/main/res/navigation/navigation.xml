<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:startDestination="@id/foodListFragment"
    android:id="@+id/navigation">
    <fragment
        android:id="@+id/foodListFragment"
        android:name="com.example.fooddataviewer_mvi.foodlist.FoodListFragment">
        <action
            android:id="@+id/scan"
            app:destination="@+id/scanFragment"/>
    </fragment>

    <fragment
        android:id="@+id/scanFragment"
        android:name="com.example.fooddataviewer_mvi.scan.ScanFragment">
        <action
            android:id="@+id/foodDetails"
            app:destination="@id/foodDetailsFragment"/>
    </fragment>

    <fragment
        android:id="@+id/foodDetailsFragment"
        android:name="com.example.fooddataviewer_mvi.fooddetails.FoodDetailsFragment">
        <argument
            android:name="barcode"
            app:argType="string"/>
    </fragment>

</navigation>